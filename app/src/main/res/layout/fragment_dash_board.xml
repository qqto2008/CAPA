<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context="com.capa.capa.capa.DashBoardFragment"
    android:padding="10dp"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="@color/cardColorBlue"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:src="@drawable/ic_attach_money_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="Fee :"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="casual"/>

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="121dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="$ 5.00 per hour"
                    android:textColor="@color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="@color/cardColorBlue"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:src="@drawable/ic_payment_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="Total :"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="casual"/>
                <TextView
                    android:id="@+id/feeTextView"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:text="$ 20.00"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:fontFamily="casual"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        >


        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="@color/cardColorBlue"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:src="@drawable/ic_timer_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Start Time:"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="casual"/>

                <TextView
                    android:id="@+id/startTimeTextView"
                    android:layout_width="121dp"
                    android:layout_height="20dp"
                    android:layout_margin="5dp"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="12:00"
                    android:textColor="@color/white" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="160dp"
            android:layout_height="190dp"
            app:cardBackgroundColor="@color/cardColorBlue"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circlebackgroundpurple"
                    android:src="@drawable/ic_timer_off_black_24dp"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="End Time:"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="casual"/>
                <TextView
                    android:id="@+id/endTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="15:00"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:fontFamily="casual"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>

    

</FrameLayout>
